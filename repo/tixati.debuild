tixati__version-pre() {
    download_url=$(curl -s https://tixati.com/linux | grep amd64.deb | awk -F'"' '{ print $12 }' | sed -e 's/\.asc$//')
    echo "$download_url" > download_url.txt
    echo "$download_url" | awk -F/ '{ print $5 }' | awk -F_ '{ print $2 }'
}

tixati__get-sources() {
    download_url=$(cat download_url.txt)
    curl -LO "$download_url"
}

tixati__build() {
    destination="$1"
    cp *.deb "$destination/"
}

tixati__version() {
    echo *.deb | awk -F'_' '{ print $2 }'
}
